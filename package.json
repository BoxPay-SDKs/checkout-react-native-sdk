{
  "name": "checkout-react-native-sdk",
  "version": "0.1.0",
  "description": "Boxpay Payment Gateway",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./interface": {
      "source": "./src/interface.tsx",
      "types": "./lib/typescript/src/interface.d.ts",
      "default": "./src/interface.tsx"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace checkout-react-native-sdk-example",
    "test": "jest",
    "typecheck": "tsc",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ishika1601-boxpay/checkout-react-native-sdk.git"
  },
  "author": "ishika bansal <ishika.bansal@boxpay.tech> (https://github.com/Ishika1601-boxpay)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Ishika1601-boxpay/checkout-react-native-sdk/issues"
  },
  "homepage": "https://github.com/Ishika1601-boxpay/checkout-react-native-sdk#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native-community/bob": "^0.17.1",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.78.0",
    "@release-it/conventional-changelog": "^9.0.2",
    "@types/base-64": "^1.0.2",
    "@types/jest": "^29.5.5",
    "@types/react": "^19.0.12",
    "babel-plugin-transform-define": "^2.1.4",
    "del-cli": "^5.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-native": "0.72.4",
    "react-native-builder-bob": "^0.40.13",
    "release-it": "^17.10.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.71.0"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.52.0"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "base-64": "^1.0.0",
    "cross_platform_sdk": "file:./cross_platform_sdk_react_native_plugin/src",
    "currency-symbol-map": "^5.1.0",
    "expo-router": "^5.1.4",
    "lottie-react-native": "^7.2.5",
    "react-native-dotenv": "^3.4.11",
    "react-native-modal": "^14.0.0-rc.1",
    "react-native-paper": "^5.14.5",
    "react-native-shimmer-placeholder": "^2.0.9",
    "react-native-svg": "^15.12.0",
    "react-native-toast-message": "^2.3.3",
    "react-native-webview": "^13.15.0"
  },
  "react-native": "src/index.tsx",
  "module": "lib/module/index.js",
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
